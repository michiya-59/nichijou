<% if @notices.total_pages > 1 %>
  <div class="pagenation">
    <%# 前ページへのリンク。存在しない場合は表示しない。 %>
    <% if @notices.prev_page %>
      <%= link_to '前へ', notices_path(type: params[:type], page: @notices.prev_page), class: 'beige common_size14' %>
    <% end %>
    
    <%# 各ページへのリンク %>
    <% 1.upto(@notices.total_pages) do |page| %>
      <% if page == @notices.current_page %>
        <%# 現在のページは非活性表示 %>
        <a class="common_btn_beige_background common_size14"><%= page %></a>
      <% else %>
        <%# それ以外のページへのリンク %>
        <%= link_to page, notices_path(type: params[:type], page: page), class: 'common_box_beige common_size14' %>
      <% end %>
    <% end %>
    
    <%# 次ページへのリンク。存在しない場合は表示しない。 %>
    <% if @notices.next_page %>
      <%= link_to '次へ', notices_path(type: params[:type], page: @notices.next_page), class: 'beige common_size14' %>
    <% end %>
  </div>
<% end %>
