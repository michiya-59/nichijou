<%= form_with model: @area, url: (@area.new_record? ? admin_areas_path : admin_area_path(@area)) do |f| %>

  <%= render 'shared/error_messages'%>

  <div class="form-group">
    <%= f.label :name, "都道府県", class: "mb-1 mt-3" %>
    <span class="badge bg-danger form_require">必須項目</span>
    <%= f.select :name, Area::LIST.map { |name| [name, name] }, { prompt: '都道府県を選択してください' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "市区郡", class: "mb-1 mt-3" %>
    <span class="badge bg-danger form_require">必須項目</span>
    <%= f.text_field :city_name, class: 'form-control', required: true %>
  </div>

  <div class="mb-4">
    <%= link_to '戻る', admin_areas_path, data: {turbo: false}, class: 'btn btn-warning mt-2' %>
    <%= f.submit '更新', data: {turbo: false}, class: 'btn btn-info mt-2' %>  
  </div>
<% end %>
