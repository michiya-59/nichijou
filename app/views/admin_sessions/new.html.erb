<%= stylesheet_link_tag "admin_index" %>

<% if flash[:alert].blank? || flash[:logout].blank? %>
  <% if session[:flash_message].present? %>
    <div class="alert alert-success mt-2" role="alert">
      <%= session[:flash_message] %>
    </div>
  <% end %>
<% end %>

<% if flash[:alert].present? %>
  <div class="alert alert-danger text-center mt-2">
    <%= flash[:alert].html_safe %>
  </div>
<% end %>

<% if flash[:logout].present? %>
  <div class="alert alert-danger text-center mt-2">
    <%= flash[:logout].html_safe %>
  </div>
<% end %>

<h2 class="text-center mb-4 mt-4">管理者ログイン</h2>

<%= form_with url: admin_login_path, local: true, class: 'container mt-5' do |f| %>
  <div class="mb-3">
    <%= f.label :login_id, 'ログインID', class: 'form-label' %>
    <%= f.text_field :login_id, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, 'パスワード', class: 'form-label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= f.submit 'ログイン', class: 'btn btn-primary' %>
  </div>
<% end %>

