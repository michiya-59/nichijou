<%= stylesheet_link_tag "admin_index" %>

<h1 class="mb-3">エリア一覧</h1>

<%= link_to '新しいエリアを追加', new_area_path, data: {turbo: false}, class: 'btn btn-primary mb-3' %>
<% if flash[:success].present? %>
  <div class="alert alert-success text-center">
    <%= flash[:success].html_safe %>
  </div>
<% elsif flash[:destroy].present? %>
  <div class="alert alert-danger text-center">
    <%= flash[:destroy].html_safe %>
  </div>
<% end %>
<table class="table table-bordered table-hover">
  <thead class="table-light">
    <tr>
      <th>エリア名</th>
    </tr>
  </thead>
  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td>
          <%= link_to '編集', edit_area_path(area), data: {turbo: false}, class: 'btn btn-sm btn-warning me-2' %> 
          <%= link_to '削除', area_path(area), data: { "turbo-method": :delete, turbo_confirm: "削除しますか？"}, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>