    </tr>
    <tr>
      <td>2回目以降来店用クーポン</td>
      <td>
        <%= link_to '詳細', coupons_detail_admin_coupons_path(coupon_type: 2, store_id: params[:store_id]), class: 'btn btn-sm btn-success me-2' %>
